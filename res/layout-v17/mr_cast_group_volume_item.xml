        <ImageView android:gravity="center" android:layout_width="24dp" android:layout_height="24dp" android:layout_marginRight="16dp" android:src="?attr/mediaRouteAudioTrackDrawable" android:scaleType="center" />
        <android.support.v7.app.MediaRouteVolumeSlider android:id="@+id/mr_group_volume_slider" android:layout_width="fill_parent" android:layout_height="fill_parent" android:contentDescription="@string/mr_controller_volume_slider" />
    </LinearLayout>
</LinearLayout>