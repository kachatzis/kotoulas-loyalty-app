    <android.support.v7.widget.CardView android:id="@+id/card_view" android:layout_width="fill_parent" android:layout_height="wrap_content" card_view:cardBackgroundColor="#FFFFFF" card_view:cardCornerRadius="10dp" card_view:cardElevation="1dp" card_view:cardUseCompatPadding="true" xmlns:card_view="http://schemas.android.com/apk/res-auto">
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/ImageViewPortal_photo" android:tag="image_tag" android:layout_width="0dp" android:layout_height="120dp" android:layout_margin="5dp" android:src="@drawable/noimage" android:layout_weight="1" />
            <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_weight="2">
                <TextView android:textAppearance="?android:attr/textAppearanceLarge" android:layout_gravity="center_horizontal" android:id="@+id/textViewPortal_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="Αμόλυβδη" />
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:textSize="30dp" android:layout_gravity="center_horizontal" android:id="@+id/textViewPortal_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:text="2,00 €/L" />
                <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:layout_gravity="center_horizontal" android:id="@+id/textViewPortal_small_description" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="H Kotoulas Energy παραμένει..." />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>