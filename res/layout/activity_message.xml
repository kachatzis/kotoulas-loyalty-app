<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView android:layout_gravity="center" android:id="@+id/imageViewMessage" android:layout_width="100dp" android:layout_height="100dp" />
    <TextView android:textSize="20sp" android:textStyle="normal" android:textColor="#CCC" android:gravity="center" android:id="@+id/textViewMessage" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="MESSAGE" />
    <Button android:textSize="25sp" android:textColor="#ccc" android:gravity="center" android:layout_gravity="center" android:id="@+id/btn_confirm" android:background="@drawable/button_bg_round" android:layout_width="150dp" android:layout_height="150dp" android:layout_marginTop="150dp" android:text="OK" />
</LinearLayout>